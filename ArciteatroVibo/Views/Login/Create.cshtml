@model ArciteatroVibo.Models.Utenti

@{
    ViewData["Title"] = "Create";
}




<hr />
<div class="container">
<div class="row  container justify-content-center m-5">
        <div class="bg-white aragostaFont"> <h3 class="text-center">Esegui l'accesso per iscriverti ai nostri laboratori!</h3></div>
        <h4 class="aragostaFont text-center m-5">Login</h4>
        <div class="col-md-4">
            <img src="~/immagini/Log-in.jpg" alt="Alternate Text" class="card-img-small " style="filter:saturate(0%)" />


        </div>
    <div class="col-md-4 me-5">
            @if (ViewBag.Error != null)
            {
                <p class="bg-black p-2 text-white">@ViewBag.Error</p>
            }
        
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
               
            <div class="form-group">
                   
                <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                   
                    <input type="submit" value="Accedi" class="pinkButtonSmall mt-3" />
                    <span>Oppure</span>  <a asp-controller="Utenti" asp-action="Create" class="bg-white aragostaFont " style="Text-decoration:none"> Registrati</a>
            </div>
        </form>
    </div>
      
</div>

<div>
    
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
