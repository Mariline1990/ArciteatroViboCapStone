@model ArciteatroVibo.Models.Rassegne

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="container">
    <h4 class="py-5 aragostaFont ">Rassegna "Il Coraggio delle Donne"<span> @Html.DisplayFor(model => model.Edizione)</span></h4>
   <div class="row">
        <div class="col-6"> <img class="d-block w-100 imageFit" src="@Url.Content(Model.Locandina)" /></div>
        <div class="col-6">
            
            <h4 > @Html.DisplayFor(model=> model.Titolo)</h4>
            <p>@Html.DisplayFor(model => model.Testo)</p>
            <div class="row">
                <div class="col-6">
                    <p>Luogo: @Html.DisplayFor(model => model.Luogo)</p>
                    <p>Data: @Html.DisplayFor(model => model.Data)</p>
                </div>
                <div class="col-6">
                    <p>Regia: @Html.DisplayFor(model => model.Regia)</p>
                    <p>Interpreti: @Html.DisplayFor(model => model.Interpreti)</p>
                </div>
            </div>
        </div>
   </div>


</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdRassegna">Edit</a> |
