                <a asp-action="Edit" asp-route-id="@item.IdRassegna">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdRassegna">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdRassegna">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
