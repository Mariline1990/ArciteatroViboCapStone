                @Html.DisplayNameFor(model => model.Luogo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Regia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Interpreti)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Extra)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titolo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Locandina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Testo)
