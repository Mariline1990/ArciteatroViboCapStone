@model IEnumerable<ArciteatroVibo.Models.Card>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>

    @foreach (var item in Model)
    {

     

        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="@Url.Content(item.Foto)" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                    <div>
                        <a src="@Html.DisplayFor(modelItem => item.Link)" class=" h3 text-decoration-none link-dark"> @Html.DisplayFor(modelItem => item.Titolo)</a>
                    </div>
                </div>
            </div>
        </div>

    }

