@model ArciteatroVibo.Models.Laboratorio

@{
    ViewData["Title"] = "Create";
}




<hr />
<div class="row justify-content-center">
    <div class="col-md-7">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h4 class="titlePage">Aggiungi Laboratorio</h4>
            <div class="row border border-danger justify-content-between m-5">

                <div class="col-md-5 p-5">
                    <h4 class="aragostaFont">Home Laboratorio</h4>
                    <div class="form-group">
                        <label asp-for="Immagine" class="control-label"></label>
                        <input asp-for="ImmagineUp" class="form-control" type="file" />
                        <span asp-validation-for="Immagine" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Titolo" class="control-label"></label>
                        <input asp-for="Titolo" class="form-control" />
                        <span asp-validation-for="Titolo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Testo" class="control-label"></label>
                        <input asp-for="Testo" class="form-control" />
                        <span asp-validation-for="Testo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PostiLiberi" class="control-label"></label>
                        <input asp-for="PostiLiberi" class="form-control" />
                        <span asp-validation-for="PostiLiberi" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-5 pe-5 me-5">
                    <img src="~/immagini/HomeLaboratorio.png" class=" img-fluid pe-5" alt="Alternate Text" />
                </div>
            </div>
            <div class="row border border-danger m-5">
                <div class="col-md-5 p-5">
                    <div class="form-group">
                        <h4 class="aragostaFont">Dettagli Laboratorio</h4>
                        <label asp-for="Testo2" class="control-label"></label>
                        <input asp-for="Testo2" class="form-control" />
                        <span asp-validation-for="Testo2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EMail" class="control-label"></label>
                        <input asp-for="EMail" class="form-control" />
                        <span asp-validation-for="EMail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" type="tel" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DataInizio" class="control-label"></label>
                        <input asp-for="DataInizio" class="form-control" />
                        <span asp-validation-for="DataInizio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DataFine" class="control-label"></label>
                        <input asp-for="DataFine" class="form-control" />
                        <span asp-validation-for="DataFine" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-5 mt-3 ms-3 p-3">
                    <h5>In base alle iscrizioni il sistema calcolerà i posti rimanenti. Finiti i posti il laboratorio chiuderà le iscrizioni</h5>
                   <img src="~/immagini/Dettaglilaboratorio.png"  class="img-fluid" alt="Alternate Text" />
                </div>
            </div>



            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
