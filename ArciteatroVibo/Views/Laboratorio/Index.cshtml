@model IEnumerable<ArciteatroVibo.Models.Laboratorio>

@{
    ViewData["Title"] = "Index";
}


<div class="container  mt-3 ">
    <h4 class="titlePage">Laboratori</h4>
    @if (User.IsInRole("Admin"))
    {
        <div class="text-center m-5"> <a asp-action="Create"> <img src="~/immagini/nuovoLab.png" width="300px" alt="Alternate Text" id="liveAlertBtn" /></a></div>
    }
    @if(ViewBag.iscrizione != null){
    <div class="row justify-content-center">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @ViewBag.iscrizione
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>    
    </div>
    }
    @foreach (var item in Model.Reverse())
    {

        <div class="row justify-content-center cardLabOdd ">
            <div class=" col-xxl-12  my-3 " style="max-width: 940px;">
                <div class="row g-0">
                    <div class="col-xl-4">
                        <img src="@Url.Content(item.Immagine)" class="card-img-lab slit-in-vertical" alt="...">
                    </div>
                    <div class="col-xl-8 p-4 cardLab position-relative">
                        @if(item.PostiLiberi > 0)
                        {
                            <span class="badge bg-dark  position-absolute top-0 start-100 translate-middle">
                                
                                    @Html.DisplayFor(modelItem => item.PostiLiberi) posti
                                
                            </span>
                        }
                   
                        <h4 class=""> @Html.DisplayFor(modelItem => item.Titolo)</h4>
                        <p>
                            @Html.DisplayFor(modelItem => item.Testo)
                        </p>
                        <div class="row justify-content-end">
                            <div class="col-3 ">
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.IdLaboratorio"> <img src="~/immagini/Modifica.png" width="200px" alt="Alternate Text" id="liveAlertBtn" /></a>
                                    <a asp-action="Elimina" asp-route-id="@item.IdLaboratorio"> <img src="~/immagini/Elimina.png" width="200px" alt="Alternate Text" id="liveAlertBtn" /></a>
                                }
                                <div class=" ">
                                    <a asp-action="Details" class="   btn btn pinkButtonSmall " asp-route-id="@item.IdLaboratorio">Esplora</a>

                                

                                </div>
                            </div>
                        </div>
                        

                    </div>
                </div>
            </div>
        </div>

    }
</div>
